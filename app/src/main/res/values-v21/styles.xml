<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="darkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#dfe0d7</item>
    </style>

    <style name="lightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:toolbarStyle">@style/ToolBarStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="CaseEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#cfd8dc</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="FloatingActionButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/bg_fab</item>
        <item name="android:stateListAnimator">@anim/fab_animator</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>
</resources>