<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="darkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#343c40</item>
    </style>
    <style name="lightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="CaseEditTextTheme">
        <!-- colorControlNormal 포커스가 안되었을때 -->
        <item name="colorControlNormal">#cfd8dc</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!-- colorControlActivated 포커스 되었을때 -->
    </style>

    <style name="FloatingActionButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_fab</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

</resources>
