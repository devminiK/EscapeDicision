<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="14dp"
    android:gravity="center_vertical"
    android:paddingBottom="14dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/order_num"
        android:text="1"
        android:textColor="@color/colorCase"
        android:background="@drawable/bg_order_case"
        android:layout_width="32dp"
        android:gravity="center"
        android:layout_height="32dp" />
    <ImageButton
        android:id="@+id/remove_case"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_remove_case"
        android:paddingLeft="8dp"
        android:paddingRight="12dp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/order_num"
        android:layout_toLeftOf="@id/remove_case"
        android:singleLine="true"
        android:theme="@style/CaseEditTextTheme"/>
</RelativeLayout>