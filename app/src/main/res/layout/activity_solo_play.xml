<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    android:orientation="vertical"
    tools:context="com.game.escape.escapedicision.Activity.SoloPlayActivity">

    <include layout="@layout/toolbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_help"
            android:textColor="#434343"
            android:padding="10dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_text_window" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/case_list_title"
            android:layout_below="@id/help"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/case_title"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경우의 수"
                android:textStyle="bold"
                android:textColor="@color/colorCase"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/num_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/case_title"
                android:text="3"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="19sp"/>
            <RelativeLayout
                android:id="@+id/add_case"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="8dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_add"
                    android:src="@mipmap/ic_add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_add"
                    android:text="추가"
                    android:layout_marginLeft="6dp"
                    android:textSize="18sp"
                    android:layout_alignBaseline="@id/img_add"
                    android:textColor="@color/colorCase"/>
            </RelativeLayout>
        </RelativeLayout>
        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="시작"
            android:id="@+id/game_start"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_button"/>
        <ListView
            android:id="@+id/case_list"
            android:layout_below="@id/case_list_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/game_start"
            android:divider="@android:color/transparent"
            android:descendantFocusability="afterDescendants"
            android:dividerHeight="0dp"></ListView>
    </RelativeLayout>
</LinearLayout>
