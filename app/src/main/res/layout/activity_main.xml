<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="@color/colorBackgroundDark"
    android:gravity="center_horizontal" tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="28dp"
        android:layout_width="wrap_content"
        android:layout_height="170"
        android:scaleType="fitCenter"
        android:src="@mipmap/img_main_logo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:layout_marginTop="16dp"
        android:paddingRight="12dp">
        <ImageButton
            android:id="@+id/button_soloplay"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_n_solo_play"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button_multiplay"
            android:layout_alignBaseline="@id/button_soloplay"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_n_multi_play"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
    <Button
        android:id="@+id/favorite"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="22dp"
        android:text="@string/favorite_name"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/bg_button"
        android:drawableLeft="@drawable/ic_navi_favorite"/>
    <Button
        android:id="@+id/memo"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/memo_name"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/bg_button"
        android:drawableLeft="@drawable/ic_navi_memo"
        />
    <Button
        android:id="@+id/quit"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="16dp"
        android:text="게임종료"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/bg_button"
        android:drawableLeft="@drawable/ic_navi_quit"/>
</LinearLayout>
