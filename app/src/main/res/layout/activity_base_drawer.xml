                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_indicate_now_layout"
                        android:visibility="gone"/>
                </FrameLayout>
