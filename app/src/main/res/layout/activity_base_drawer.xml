                android:paddingBottom="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/bar_1"
                android:gravity="center_vertical"
                android:layout_alignRight="@id/bar_1">

                <ImageView
                    android:id="@+id/img_solo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/ic_navi_solo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/solo_play_name"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/img_solo"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/colorCase"/>
                <FrameLayout
